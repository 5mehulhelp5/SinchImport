    $summaryFeatures[] = "<strong>" . $title . ":</strong><span>" . $value . "</span>";
}
    echo "<div class='sitc-summary-features'><div class='row no-gutters'>";
    $countSummaryFeatures = count($summaryFeatures);
    switch($countSummaryFeatures){
