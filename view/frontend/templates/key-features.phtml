            echo "<div class='col-6 col-md-3 pr-2'><strong>SKU:</strong>" . $product->getSku('sku') . "</div>";
            echo "<div class='col-6 col-md-3 pr-2'><strong>EAN:</strong>" . $product->getData('ean') . "</div>";
