            echo "<div class='col-6 col-md-3 pr-2'><strong>SKU:</strong>" . $product->getSku('sku') . "</div>";
            break;
        case 3:
            foreach ($summaryFeatures as $feature) {
                echo "<div class='col-6 col-md-3 pr-2'>" . $feature . "</div>";
            }
            echo "<div class='col-6 col-md-3 pr-2'><strong>Manufacturer:</strong>" . $product->getAttributeText('manufacturer') . "</div>";
