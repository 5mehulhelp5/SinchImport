<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
	<type name="Magebuzz\Sinchimport\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Magebuzz\Sinchimport\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">sinchImportLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Magebuzz\Sinchimport\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Block\Product\View\Gallery">
        <plugin name="mb_change_product_image" type="Magebuzz\Sinchimport\Block\Product\View\Gallery" sortOrder="0" />
    </type>
    <preference for="Magento\Catalog\Model\Product\Image" type="Magebuzz\Sinchimport\Model\Product\Image"/>
    <preference for="Magento\Catalog\Helper\Image" type="Magebuzz\Sinchimport\Helper\Image"/>
    <preference for="Magento\Catalog\Model\Category" type="Magebuzz\Sinchimport\Model\Category"/>
    <!-- <preference for="Magento\Catalog\Model\Layer\FilterList" type="Magebuzz\Sinchimport\Model\Layer\FilterList"/> -->
</config>
